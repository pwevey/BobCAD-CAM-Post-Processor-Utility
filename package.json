{
  "name": "bobcad-post",
  "displayName": "BobCAD-CAM Post Processor Utility",
  "description": "Tool for BobCAD Post Processors",
  "version": "0.0.1",
  "icon": "res/icons/logo.png",
  "author": {
    "name": "BobCAD-CAM",
    "email": "support@bobcad.com",
    "url": "http://www.bobcadsupport.com"
  },
  "publisher": "BobCAD-CAM",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:bcpst"
  ],
  "extensionKind": [
    "ui"
  ],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "postBlocks.refresh",
        "title": "BobCAD Post Utility: Refresh Post Blocks"
      },
      {
        "command": "postBlocks.collapseAll",
        "title": "BobCAD Post Utility: Collapse Tree Items"
      },
      {
        "command": "postBlocks.expandAll",
        "title": "BobCAD Post Utility: Expand Tree Items"
      },
      {
        "command": "postBlocks.navigateToLineFromPalette",
        "title": "BobCAD Post Utility: Go to Post Block"
      },
      {
        "command": "postBlocks.toggleDebug",
        "title": "BobCAD Post Utility: Toggle Debug Mode"
      }
    ],
    "keybindings": [
      {
        "command": "postBlocks.refresh",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus"
      },
      {
        "command": "postBlocks.toggleDebug",
        "key": "ctrl+alt+d",
        "when": "editorTextFocus && resourceLangId == 'bcpst'"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "postBlocks",
          "name": "Post Blocks"
        }
      ]
    },
    "languages": [
      {
      "id": "bcpst",
      "aliases": ["BobCAD-CAM Post Processor", "bcpst"],
      "extensions": [".bcpst",".edmpst",".lathepst",".millpst"],
      "configuration": "./language-configuration.json"
      },
      {
				"id": "nccode",
				"aliases": [
					"nccode",
					"gcode"
				],
				"extensions": [
					".nc",
					".tap",
					".cnc",
					".gc",
					".mpf",
					".spf",
					".h"
				],
				"configuration": "./language-configuration.json"
			}
  ],
    "grammars": [
      {
      "language": "bcpst",
      "scopeName": "source.bcpst",
      "path": "./syntaxes/bcpst.tmLanguage.json"
      },
      {
				"language": "nccode",
				"scopeName": "source.nccode",
				"path": "./syntaxes/nccode.tmLanguage.json"
			}
  ]
  }
}
